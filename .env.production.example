# KamHub Production Environment Variables
# ВАЖНО: Скопируйте этот файл в .env.production и заполните значения

# ===================================
# DATABASE
# ===================================
DATABASE_URL=postgresql://kamhub_user:YOUR_STRONG_PASSWORD@localhost:5432/kamhub
POSTGRES_USER=kamhub_user
POSTGRES_PASSWORD=YOUR_STRONG_PASSWORD
POSTGRES_DB=kamhub

# ===================================
# NEXT.JS
# ===================================
NODE_ENV=production
NEXT_PUBLIC_API_URL=http://5.129.248.224:3002

# ===================================
# EXTERNAL APIS (опционально)
# ===================================

# Yandex Maps (для карт и геокодинга)
YANDEX_MAPS_API_KEY=your_yandex_maps_api_key

# Weather APIs (для виджета погоды - поддерживается несколько провайдеров)
# ⚠️ ВАЖНО: YANDEX_WEATHER_API_KEY - основной провайдер для Камчатки (точность 9/10)
YANDEX_WEATHER_API_KEY=8f6b0a53-135f-4217-8de1-de98c1316cc0  # ← Production API key
OPENWEATHERMAP_API_KEY=your_openweathermap_api_key  # Опционально (fallback)
WEATHERAPI_KEY=your_weatherapi_key                    # Опционально (fallback)

# ===================================
# NOTIFICATIONS (опционально)
# ===================================

# SMS.ru (для SMS уведомлений)
SMS_RU_API_KEY=your_sms_ru_api_key

# Telegram Bot (для уведомлений в Telegram)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# AWS SES (для email уведомлений)
AWS_SES_ACCESS_KEY_ID=your_aws_access_key
AWS_SES_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_SES_REGION=us-east-1

# ===================================
# AI SERVICES (опционально)
# ===================================

# Groq (для AI чата - primary)
GROQ_API_KEY=your_groq_api_key

# DeepSeek (для AI чата - fallback)
DEEPSEEK_API_KEY=your_deepseek_api_key

# ===================================
# PAYMENT GATEWAY (будущее)
# ===================================

# CloudPayments
CLOUDPAYMENTS_PUBLIC_ID=your_cloudpayments_public_id
CLOUDPAYMENTS_API_SECRET=your_cloudpayments_api_secret

# ===================================
# SECURITY
# ===================================

# JWT Secret (для аутентификации)
JWT_SECRET=GENERATE_RANDOM_STRING_HERE

# Session Secret
SESSION_SECRET=GENERATE_RANDOM_STRING_HERE

# ===================================
# MONITORING (опционально)
# ===================================

# Sentry (для отслеживания ошибок)
SENTRY_DSN=your_sentry_dsn

# Google Analytics
NEXT_PUBLIC_GA_ID=your_google_analytics_id
