{
  "name": "kamhub",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start -p ${PORT:-3000}",
    "lint": "next lint",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:integration": "vitest --include '**/*.integration.test.ts' --run",
    "test:unit": "vitest --include '**/*.test.ts' --exclude '**/*.integration.test.ts' --run",
    "db:setup": "bash scripts/setup-database.sh",
    "db:migrate": "psql $DATABASE_URL -f scripts/apply-new-schemas.sql",
    "sentry:sourcemaps": "sentry-cli sourcemaps upload --org kamhub --project nextjs .next",
    "postbuild": "echo Sentry sourcemaps skipped",
    "ai:update-knowledge": "node scripts/update-knowledge-base.js",
    "ai:update-knowledge:file": "node scripts/update-knowledge-base.js file",
    "security:audit": "bash scripts/security/audit.sh",
    "security:detect-secrets": "bash scripts/security/detect-secrets.sh",
    "test:load": "bash load-tests/k6/run-load-test.sh",
    "k8s:apply": "kubectl apply -k k8s/base",
    "k8s:apply:prod": "kubectl apply -k k8s/production",
    "k8s:delete": "kubectl delete -k k8s/base",
    "k8s:delete:prod": "kubectl delete -k k8s/production",
    "k8s:validate": "kubectl apply -k k8s/base --dry-run=client -o yaml > /dev/null && echo 'Kubernetes manifests are valid'",
    "k8s:validate:prod": "kubectl apply -k k8s/production --dry-run=client -o yaml > /dev/null && echo 'Production Kubernetes manifests are valid'",
    "docker:build": "docker build -t kamhub:latest .",
    "docker:build:prod": "docker build -t kamhub:$(git rev-parse --short HEAD) -t kamhub:latest .",
    "docker:push": "docker push kamhub:latest",
    "docker:run": "docker run -p 3000:3000 -e NODE_ENV=development kamhub:latest",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.927.0",
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^3.0.3",
    "clsx": "^2.1.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.6.1",
    "jose": "^5.2.0",
    "lucide-react": "^0.555.0",
    "next": "^15.5.10",
    "nodemailer": "^7.0.13",
    "pg": "^8.11.3",
    "react": "^18.3.1",
    "react-datepicker": "^8.10.0",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.6.0",
    "typescript": "5.4.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@types/node": "^20.11.25",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.11.2",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@types/swagger-jsdoc": "^6.0.4",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^4.0.18",
    "autoprefixer": "^10.4.18",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.5.10",
    "jsdom": "^28.0.0",
    "postcss": "^8.4.35",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-dist": "^5.31.1",
    "tailwindcss": "^3.4.10",
    "vitest": "^4.0.18"
  }
}
